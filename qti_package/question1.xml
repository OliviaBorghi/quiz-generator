<?xml version="1.0" encoding="utf-8"?>
<item ident="power_rule_diff_v1" title="power_rule_diff_v1">
  <presentation>
    <material>
      <mattext texttype="text/html">Differentiate the function &lt;script type=&quot;math/tex&quot;&gt;f(x) = 4 x^{2}&lt;/script&gt;.</mattext>
    </material>
    <response_lid ident="response1" rcardinality="Single">
      <render_choice>
        <response_label ident="choice1">
          <material>
            <mattext texttype="text/html">&lt;script type=&quot;math/tex&quot;&gt;2 * 4 x^{2-1}&lt;/script&gt;</mattext>
          </material>
        </response_label>
        <response_label ident="choice2">
          <material>
            <mattext texttype="text/html">&lt;script type=&quot;math/tex&quot;&gt;4 * 2 x^{2}&lt;/script&gt;</mattext>
          </material>
        </response_label>
        <response_label ident="choice3">
          <material>
            <mattext texttype="text/html">&lt;script type=&quot;math/tex&quot;&gt;4 x^{2-1}&lt;/script&gt;</mattext>
          </material>
        </response_label>
        <response_label ident="choice4">
          <material>
            <mattext texttype="text/html">&lt;script type=&quot;math/tex&quot;&gt;4 x^{2+1}&lt;/script&gt;</mattext>
          </material>
        </response_label>
      </render_choice>
    </response_lid>
  </presentation>
  <resprocessing>
    <outcomes>
      <decvar varname="SCORE" vartype="Decimal" minvalue="0" maxvalue="100" cutvalue="50"/>
    </outcomes>
    <respcondition continue="No">
      <conditionvar>
        <varequal respident="response1">choice1</varequal>
      </conditionvar>
      <setvar action="Set">100</setvar>
      <displayfeedback feedbacktype="Response" linkrefid="correct"/>
    </respcondition>
  </resprocessing>
</item>
